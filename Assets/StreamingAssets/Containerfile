FROM debian:trixie-slim

RUN apt-get update && apt-get install curl sudo passwd -y

RUN useradd -u 1000 -m -s /bin/bash dev
RUN echo "dev:123" | chpasswd
RUN usermod -aG sudo dev
RUN mkdir -p /home/dev/bin
RUN chown dev:dev /home/dev/bin

RUN curl -L -o /usr/local/bin/ttyd https://github.com/tsl0922/ttyd/releases/download/1.7.7/ttyd.x86_64
RUN chmod +x /usr/local/bin/ttyd

RUN curl -L -o /usr/local/bin/install-fun https://raw.githubusercontent.com/carrierpigeondev/argos-remote/refs/heads/main/install-fun
RUN chmod +x /usr/local/bin/install-fun

RUN echo '#!/bin/bash' > /usr/local/bin/entrypoint.sh && \
    echo 'set -e' >> /usr/local/bin/entrypoint.sh && \
    echo 'curl -L -o /home/dev/bin/install-fun "https://raw.githubusercontent.com/carrierpigeondev/argos-remote/refs/heads/main/install-fun"' >> /usr/local/bin/entrypoint.sh && \
    echo 'chmod +x /home/dev/bin/install-fun' >> /usr/local/bin/entrypoint.sh && \
    echo 'exec ttyd -i 0.0.0.0 -u 1000 -t fontSize=32 -W bash' >> /usr/local/bin/entrypoint.sh && \
    chmod +x /usr/local/bin/entrypoint.sh

EXPOSE 7681
USER dev
CMD ["/usr/local/bin/entrypoint.sh"]